<p id="notice"><%= notice %></p>

<h1>Deliciosos Helados</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Foto</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ice_creams.each do |ice_cream| %>
      <tr>
        <td><%= ice_cream.name %></td>
        <td><%= ice_cream.description %></td>
        <td><%= image_tag(ice_cream.picture_url, :width=>50) %></td>
        <td><%= ice_cream.price %></td>
        <td><%= link_to 'Mostrar', ice_cream %></td>
        <td><%= link_to 'Editar', edit_ice_cream_path(ice_cream) %></td>
        <td><%= link_to 'Eliminar', ice_cream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

